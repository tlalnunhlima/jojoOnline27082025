<!DOCTYPE html>

<html lang="en">
  
<%- include('layouts/headers') -%>


<body class="bg-white">
    
    <%- include('layouts/navbar') -%>
    
    <%- include ('ejsFunction') %> <!--function javascript ejs-->
    
<main class="container">
    
            <div class="d-flex justify-content-between m-3">
            
            <a class="text-primary small" data-bs-toggle="tooltip" data-bs-placement="bottom" title="goto student list" href="/stdList"><i class="fas fa-arrow-left text-dark fw-bold"></i> Go back</i> </a>
            
            </div>
    

    <div class="d-flex justify-content-center">
        
        <ul class="list-group shadow-sm">
            
              <li class="list-group-item  text-center text-muted fw-bold" aria-current="true"> <%= viewTitle %></li>
              
              <li class="list-group-item"><a class="text-muted" data-bs-toggle="tooltip" data-bs-placement="bottom" title="view today fee recieved" href="/viewFee/todayFeeReview"><i class="fas fa-calendar-day text-primary fw-bold"></i> View Today Fee</a></li>
              
              <li class="list-group-item"><a class="text-muted" data-bs-toggle="tooltip" data-bs-placement="bottom" title="view all fee recieved" href="/viewFee/viewAllFeeReceived"><i class="fas fa-calendar-week text-primary fw-bold"></i> View Monthly Fee</a></li>
              
              <li class="list-group-item"><a class="text-muted" data-bs-toggle="tooltip" data-bs-placement="bottom" title="view exam fee" href="/viewFee/viewExamFeeReceived"><i class="fas fa-pen-nib text-primary fw-bold"></i> View Exam Fee</a></li>
              
              <li class="list-group-item"><a class="text-muted" data-bs-toggle="tooltip" data-bs-placement="bottom" title="view other fee" href="/viewFee/viewOtherFeeReceived"><i class="fas fa-feather text-primary fw-bold"></i> View Other Fee</a></li>
              
           
              <li class="list-group-item d-flex justify-content-center text-muted">
                  
                <i class="fas fa-calendar-check fw-bold text-primary me-1"></i> 
                
                <input type="text" id="floatingDob" style="width: 150px" placeholder="dd-mm-yyyy" class="form-control ms-2 dateSelect" required />
                
                <a href="/viewFee/viewFeeByDate" id="searchFeeByDate" class="btn btn-primary ms-2"> View By Date</a>
              
              </li>
              
        </ul>
        
        </div>

</main>
    
    <%- include('layouts/scripts') -%>
    
    <%- include('layouts/footer') -%>
    
    <!--Search by date url siam remna jquery function-->
    <script> 
        
        $(function() {
            
            
                    $('#searchFeeByDate').click( function(e) {
                        
                        e.preventDefault();
                        
                        //checkValidity() Returns true if an input element contains valid data.
                        
                    if ($(".dateSelect")[0].checkValidity()) {
                        
                        window.location = $(this).attr('href') + '/' + $('.dateSelect').val();
                        
                        return false;
                        
                    } else {
                        
                        //Validate Form : the best function for highlighting required fields
                        
                        $(".dateSelect")[0].reportValidity()
                        
                    }
                        
                    });
                    
                });

        
    </script>
    

  </body>
  
</html>
